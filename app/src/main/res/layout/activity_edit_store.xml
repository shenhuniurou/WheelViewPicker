<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:orientation="vertical"
        tools:context="com.zj.wheelview.activity.EditStoreActivity">


        <LinearLayout
            android:id="@+id/llOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/etTitle1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:hint="请在此输入标题1"
                android:paddingLeft="8dp"
                android:textColor="#F79646"
                android:textColorHint="@color/text_light"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivTitleUrl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_upload_img" />

            <EditText
                android:id="@+id/etTitleDesc11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="请在此输入描述"
                android:maxLines="10"
                android:minLines="3"
                android:padding="8dp"
                android:textColor="#1F497D"
                android:textColorHint="@color/text_light"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivTitleDescUrl11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_upload_img"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etTitleDesc12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="请在此输入描述"
                android:maxLines="10"
                android:minLines="3"
                android:padding="8dp"
                android:textColor="#1F497D"
                android:textColorHint="@color/text_light"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivTitleDescUrl12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_upload_img"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/etTitle2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:hint="请在此输入标题2"
                android:paddingLeft="8dp"
                android:textColor="#F79646"
                android:textColorHint="@color/text_light"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivTitleUrl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_upload_img" />

            <EditText
                android:id="@+id/etTitleDesc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="请在此输入描述"
                android:maxLines="10"
                android:minLines="3"
                android:padding="8dp"
                android:textColor="#1F497D"
                android:textColorHint="@color/text_light"
                android:textSize="17sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivTitleDescUrl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_upload_img"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/etTitle3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:hint="请在此输入标题3"
                android:paddingLeft="8dp"
                android:textColor="#F79646"
                android:textColorHint="@color/text_light"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivTitleUrl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_upload_img" />

            <EditText
                android:id="@+id/etTitleDesc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:hint="请在此输入描述"
                android:maxLines="10"
                android:minLines="3"
                android:padding="8dp"
                android:textColor="#1F497D"
                android:textColorHint="@color/text_light"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSaveStoreInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/bg_selector_login"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvPreviewStoreInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_selector_login"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="预览"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
